{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "outDir": "dist/",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "baseUrl": "."
    },
    "exclude": [
        "node_modules/**/*",
        "dist/**/*",
        "web/**/*"
    ]
}