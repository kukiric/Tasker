{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "outDir": "compiled/",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "suppressImplicitAnyIndexErrors": true,
    "listEmittedFiles": true,
    "removeComments": true,
    "baseUrl": ".",
  },
  "exclude": [
    "node_modules/**/*",
    "compiled/**/*",
    "web/**/*"
  ]
}